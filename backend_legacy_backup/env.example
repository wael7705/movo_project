# MOVO Delivery Platform Environment Variables
# متغيرات البيئة لمنصة MOVO للتوصيل

# Database Configuration
# إعدادات قاعدة البيانات
DATABASE_URL=postgresql+asyncpg://postgres:movo2025@localhost:5432/movo_system

# Application Configuration
# إعدادات التطبيق
APP_NAME=MOVO Delivery Platform
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Chat Configuration
# إعدادات الدردشة
CHAT_HOST=0.0.0.0
CHAT_PORT=8001

# Delivery Fee Configuration
# إعدادات رسوم التوصيل
DELIVERY_FEE_PER_METER=0.001

# AI Configuration
# إعدادات الذكاء الاصطناعي
AI_ENABLED=true
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000

# Weather Configuration
# إعدادات الطقس
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_CACHE_DURATION=3600

# Security Configuration
# إعدادات الأمان
SECRET_KEY=movo-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
# إعدادات رفع الملفات
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf

# Logging Configuration
# إعدادات السجلات
LOG_LEVEL=INFO
LOG_FILE=movo.log

# Performance Configuration
# إعدادات الأداء
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30 